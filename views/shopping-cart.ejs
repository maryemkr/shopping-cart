<%-include('parts/header.ejs')%>

<h1>shopping-cart</h1>
<% if ( totalProducts  >0) { %>
<head>
  <title></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link
    rel="stylesheet"
    href="/bower_components/bootstrap/dist/css/bootstrap.css"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
</head>
<div style="padding-top: 30px">
  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">Product Name</th>
        <th scope="col" class="text-center">Product Quantity</th>
        <th scope="col" class="text-center">Price</th>
      </tr>
    </thead>
    <tbody>
      <% for ( selectedProduct of userCart.selectedProduct ) { %>

      <tr>
        <th scope="row" class="text-center"><%= index  = index+1 %></th>

        <td class="text-center"><%= selectedProduct.name %></td>
        <td class="text-center">
          <% if (selectedProduct.quantity <= 1) { %>

          <a href="#" class="btn disabled" style="margin-right: 30px"
            ><i class="fas fa-minus-square"></i
          ></a>
          <%} else { %>
            <a href="/decreaseProduct/<%= index %>" class="btn " style="margin-right: 30px"
            ><i class="fas fa-minus-square"></i
          ></a>
          <% } %>


          <%= selectedProduct.quantity %>
          <a href="/increaseProduct/<%= index %>" class="btn " style="margin-left: 30px"
            ><i class="fas fa-plus-square"></i
          ></a>
        </td>
        <td class="text-center"><%= selectedProduct.price %></td>
        <td class="text-center"> <a href="/deleteProduct/<%= index %>" class="btn btn-danger">delete <i class="fas fa-trash-alt"></i></a></td>
      </tr>

      <% } %>
      <tr class="table-primary">
        <td colspan="3" style="font-weight: bold">Total Price</td>
        <td style="font-weight: bold" class="text-center">
          $ <%= userCart.totalPrice %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="text-center">
  <a href="/checkout" class="btn btn-success" style="width: 200px">Checkout</a>
  </div>
<%} else { %>
  <h1>your Shopping cart is empty</h1>
  <% } %>
